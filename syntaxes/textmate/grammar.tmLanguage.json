{
  "fileTypes": ["kyo", "kyoml"],
  "name": "kyoml",
  "patterns": [
    {
      "include": "#main"
    }
  ],
  "scopeName": "source.kyoml",
  "uuid": "",
  "repository": {
    "main": {
      "patterns": [
        {
          "include": "#blocks"
        },
        {
          "include": "#directives"
        },
        {
          "include": "#comment"
        },
        {
          "include": "#punctuation"
        },
        {
          "include": "#illegal"
        }
      ]
    },
    "data": {
      "patterns": [
        {
          "begin": "(\\[)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.array.kyoml"
            }
          },
          "patterns": [
            {
              "include": "#data"
            },
            {
              "include": "#comment"
            }
          ],
          "end": "(\\])",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.array.kyoml"
            }
          }
        },
        {
          "begin": "(\\{)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.map.kyoml"
            }
          },
          "patterns": [
            {
              "include": "#map_key_value"
            },
            {
              "include": "#comment"
            }
          ],
          "end": "(\\})",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.map.kyoml"
            }
          }
        },
        {
          "match": "([-\\x{002b}]?[\\d.]+)",
          "name": "constant.numeric.kyoml"
        },
        {
          "match": "(true|false|yes|no)",
          "name": "constant.language.kyoml"
        },
        {
          "include": "#strings"
        },
        {
          "include": "#directives"
        },
        {
          "include": "#punctuation"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.basic.block.kyoml",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "include": "#interpolation"
            },
            {
              "match": "\\\\([btnfr\"\\\\\\n/ ]|u[0-9A-Fa-f]{4}|U[0-9A-Fa-f]{8})",
              "name": "constant.character.escape.kyoml"
            },
            {
              "match": "\\\\[^btnfr/\"\\\\\\n]",
              "name": "invalid.illegal.escape.kyoml"
            }
          ]
        },
        {
          "name": "string.quoted.single.basic.block.kyoml",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "match": "\\\\([btnfr'\\\\\\n/ ]|u[0-9A-Fa-f]{4}|U[0-9A-Fa-f]{8})",
              "name": "constant.character.escape.kyoml"
            },
            {
              "match": "\\\\[^btnfr/'\\\\\\n]",
              "name": "invalid.illegal.escape.kyoml"
            }
          ]
        }
      ]
    },
    "interpolation": {
      "patterns": [
        {
          "begin": "(\\$\\{)",
          "beginCaptures": {
            "1": {
              "name": "keyword.operator.kyoml"
            }
          },
          "contentName": "string.interpolated.kyoml",
          "end": "(\\})",
          "endCaptures": {
            "1": {
              "name": "keyword.operator.kyoml"
            }
          }
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "captures": {
            "1": {
              "name": "comment.line.number-sign.kyoml"
            },
            "2": {
              "name": "punctuation.definition.comment.kyoml"
            }
          },
          "comment": "Comments",
          "match": "\\s*((#).*)$"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "match": "(,)",
          "name": "punctuation.kyoml",
          "comment": "general punctuation"
        }
      ]
    },
    "key_value": {
      "patterns": [
        {
          "name": "invalid.illegal.noKey.kyoml",
          "match": "(\\s*=.*)$"
        },
        {
          "name": "invalid.deprecated.noValue.kyoml",
          "match": "(\\s*[A-Za-z_\\-][A-Za-z0-9_\\-]*\\s*=)(?=\\s*$)"
        },
        {
          "begin": "\\s*([A-Za-z_][A-Za-z0-9_-]*)\\s*(=)\\s*",
          "beginCaptures": {
            "1": {
              "name": "entity.name.tag.kyoml"
            },
            "2": {
              "name": "punctuation.definition.keyValue.kyoml"
            }
          },
          "end": "($|\\,|\\s*(?=\\}))",
          "patterns": [
            {
              "include": "#data"
            },
            {
              "include": "#comment"
            }
          ]
        }
      ]
    },
    "map_key_value": {
      "patterns": [
        {
          "name": "invalid.illegal.noKey.kyoml",
          "match": "(\\s*:.*)$"
        },
        {
          "name": "invalid.deprecated.noValue.kyoml",
          "match": "(\\s*\"[A-Za-z_\\-][A-Za-z0-9_\\-]*\"\\s*:)(?=\\s*$)"
        },
        {
          "begin": "\\s*(\"[A-Za-z_][A-Za-z0-9_-]*\")\\s*(:)\\s*",
          "beginCaptures": {
            "1": {
              "name": "string.quoted.double.basic.kyoml"
            },
            "2": {
              "name": "punctuation.definition.keyValue.kyoml"
            }
          },
          "end": "($|\\,|\\s*(?=\\}))",
          "patterns": [
            {
              "include": "#data"
            },
            {
              "include": "#comment"
            }
          ]
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "match": "([\\x{003d}\\x{003a}]|\\|>|<\\|)",
          "name": "keyword.other.kyoml"
        },
        {
          "begin": "(@(\\b[a-zA-Z][a-zA-Z0-9_]*)\\()",
          "beginCaptures": {
            "1": {
              "name": "support.function.kyoml"
            }
          },
          "patterns": [
            {
              "include": "#data"
            },
            {
              "include": "#comment"
            }
          ],
          "end": "(\\))",
          "endCaptures": {
            "1": {
              "name": "support.function.kyoml"
            }
          }
        },
        {
          "match": "(@(\\b[a-zA-Z][a-zA-Z0-9_]*))",
          "name": "support.function.kyoml"
        }
      ]
    },
    "blocks": {
      "patterns": [
        {
          "begin": "(\\b[a-zA-Z][a-zA-Z0-9_]*)\\s*(\\{)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.section.kyoml"
            },
            "2": {
              "name": "punctuation.definition.array.kyoml"
            }
          },
          "patterns": [
            {
              "include": "#main"
            }
          ],
          "end": "(\\})",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.array.kyoml"
            }
          }
        },
        {
          "include": "#key_value"
        }
      ]
    },
    "illegal": {
      "patterns": [
        {
          "match": "([^\\s])",
          "name": "invalid.illegal.kyoml"
        }
      ]
    }
  }
}
